<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <title>Benutzer verwalten – Schulbibliothek</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap + eigenes CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <div class="wrap">
        <div class="topbar">
            <!-- Überschrift + Navigation im Admin-Bereich -->
            <h1>Benutzer / Schüler verwalten</h1>
            <div>
                <a href="/admin" class="btn btn-secondary">Zurück zur Admin-Übersicht</a>
                <a href="/admin/benutzer/new" class="btn">+ Neuer Benutzer</a>
                <a href="/logout" class="btn btn-secondary">Logout</a>
            </div>
        </div>

        <!-- Fehlermeldung, wenn Benutzer noch ausgeliehene Bücher hat -->
        <% if (typeof error !== 'undefined' && error === 'hasLoans') { %>
            <p style="color: red; margin-bottom: 10px;">
                Benutzer kann nicht gelöscht werden, da noch Bücher ausgeliehen sind.
            </p>
        <% } %>

        <% 
          // Standard-Filterwerte, falls nichts übergeben wurde
          const f = (typeof filters !== 'undefined')
                      ? filters
                      : { name: '', vname: '', klasse: '', email: '' };
        %>

        <!-- Filterformular für Benutzerliste -->
        <form method="get" class="filters">
            <!-- Nachname-Filter -->
            <input type="text"
                   name="name"
                   placeholder="Nachname..."
                   value="<%= f.name %>">

            <!-- Vorname-Filter -->
            <input type="text"
                   name="vname"
                   placeholder="Vorname..."
                   value="<%= f.vname %>">

            <!-- Klassen-Filter -->
            <input type="text"
                   name="klasse"
                   placeholder="Klasse..."
                   value="<%= f.klasse %>">

            <!-- E-Mail-Filter -->
            <input type="text"
                   name="email"
                   placeholder="E-Mail..."
                   value="<%= f.email %>">

            <button type="submit">Filtern</button>
        </form>

        <!-- Tabelle mit allen Benutzern entsprechend Filter -->
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Nachname</th>
                        <th>Vorname</th>
                        <th>Klasse</th>
                        <th>E-Mail</th>
                        <th>Aktionen</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (users.length === 0) { %>
                        <!-- Meldung, wenn kein Benutzer gefunden wird -->
                        <tr>
                            <td colspan="5">Noch keine Benutzer erfasst.</td>
                        </tr>
                    <% } %>

                    <% users.forEach(u => { %>
                        <!-- Ein Benutzer pro Tabellenzeile -->
                        <tr>
                            <td><%= u.name %></td>
                            <td><%= u.vname %></td>
                            <td><%= u.klasse || '' %></td>
                            <td><%= u.email || '' %></td>
                            <td>
                                <!-- Löschen-Formular mit Nachfrage -->
                                <form method="post"
                                      action="/admin/benutzer/<%= u.id %>/delete"
                                      onsubmit="return confirm('Benutzer wirklich löschen?');"
                                      style="display:inline;">
                                    <button type="submit" class="btn">Löschen</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
