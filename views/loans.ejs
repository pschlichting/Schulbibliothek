<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <title>Aktuelle Ausleihen – Schulbibliothek</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap + eigenes CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <div class="wrap">
        <div class="topbar">
            <h1>Ausleihen</h1>
            <div>
                <a href="/admin" class="btn btn-secondary">Zur Admin-Übersicht</a>
            </div>
        </div>

        <% 
          // Standard-Werte für Filter (falls nichts übergeben)
          const f = (typeof filters !== 'undefined')
                      ? filters
                      : { titel: '', benutzer: '' };
        %>

        <!-- Filter für Ausleihen: nach Buch und Benutzer -->
        <form method="get" class="filters" style="margin-bottom:12px;">
            <!-- Filter nach Buchtitel -->
            <input type="text"
                   name="titel"
                   placeholder="Buchtitel..."
                   value="<%= f.titel %>">

            <!-- Filter nach Benutzer (Name oder Vorname) -->
            <input type="text"
                   name="benutzer"
                   placeholder="Benutzer (Name/Vorname)..."
                   value="<%= f.benutzer %>">

            <!-- Checkbox: nur noch nicht zurückgegebene Ausleihen -->
            <label class="small">
                <input type="checkbox" name="nurAktiv" value="1"
                       <%= nurAktiv === '1' ? 'checked' : '' %>>
                nur aktuell ausgeliehene anzeigen
            </label>

            <button type="submit">Anwenden</button>
        </form>

        <!-- Tabelle mit allen passenden Ausleihen -->
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Buch</th>
                        <th>Benutzer</th>
                        <th>Ausleihdatum</th>
                        <th>Rückgabedatum</th>
                        <th>Aktion</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (ausleihen.length === 0) { %>
                        <!-- Meldung, falls keine Ausleihen gefunden wurden -->
                        <tr>
                            <td colspan="5">Keine Ausleihen gefunden.</td>
                        </tr>
                    <% } %>

                    <% ausleihen.forEach(a => { %>
                        <!-- Zeile wird grau markiert, solange Buch noch ausgeliehen ist -->
                        <tr class="<%= a.rueckgabedatum ? '' : 'not-available' %>">
                            <td><%= a.buchtitel %></td>
                            <td><%= a.bname %>, <%= a.bvname %> (<%= a.bklasse || '' %>)</td>
                            <td><%= a.ausleihdatum %></td>
                            <td><%= a.rueckgabedatum || 'noch ausgeliehen' %></td>
                            <td>
                                <% if (!a.rueckgabedatum) { %>
                                    <!-- Button: Ausleihe als zurückgegeben markieren -->
                                    <form method="post"
                                          action="/admin/ausleihen/<%= a.id %>/return"
                                          onsubmit="return confirm('Ausleihe wirklich als zurückgegeben markieren?');"
                                          style="display:inline;">
                                        <button type="submit" class="btn">Zurückgeben</button>
                                    </form>
                                <% } else { %>
                                    <!-- bereits zurückgegeben -->
                                    –
                                <% } %>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
